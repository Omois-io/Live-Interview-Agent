{
  "name": "live-interview-agent",
  "private": true,
  "version": "1.0.0",
  "description": "Real-time AI interview coaching for medical school applicants",
  "author": "Omois",
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dev:web": "vite",
    "build:web": "vite build",
    "dist:win": "electron-vite build && electron-builder --win --dir",
    "dist:mac": "electron-vite build && electron-builder --mac --dir"
  },
  "build": {
    "appId": "com.omois.live-interview-agent",
    "productName": "Live Interview Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "dir"
    },
    "mac": {
      "target": "dir"
    }
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^33.2.0",
    "electron-builder": "^26.4.0",
    "electron-vite": "^3.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
